{
  "private": true,
  "name": "remix-app-template",
  "description": "",
  "license": "",
  "scripts": {
    "build": "npm run build:css && remix build",
    "build:css": "tailwindcss -o ./app/styles/tailwind.css",
    "postinstall": "remix setup node",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:netlify\" \"npm run dev:remix\"",
    "dev:css": "tailwindcss -o ./app/styles/tailwind.css --watch",
    "dev:remix": "remix watch",
    "dev:netlify": "cross-env NODE_ENV=development netlify dev",
    "deploy": "npm run build && netlify deploy",
    "deploy:prod": "npm run build && netlify deploy --prod"
  },
  "dependencies": {
    "@netlify/functions": "^0.7.2",
    "@remix-run/netlify": "^1.1.1",
    "@remix-run/react": "^1.1.1",
    "classnames": "^2.3.1",
    "color-hash": "^2.0.1",
    "dayjs": "^1.10.7",
    "graphql": "^16.2.0",
    "graphql-request": "^3.7.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-responsive": "^9.0.0-beta.5",
    "remix": "^1.1.1",
    "socket.io-client": "^4.4.1",
    "zustand": "^3.6.7"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.1",
    "@types/color-hash": "^1.0.2",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.0.7",
    "typescript": "^4.1.2"
  },
  "engines": {
    "node": ">=14"
  },
  "sideEffects": false
}
